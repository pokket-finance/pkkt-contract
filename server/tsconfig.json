{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["**/*", "*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
